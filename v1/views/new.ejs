<% include partials/header %>

	<div class="container">
		<div class="row">
			<h1 style="text-align: center;">Create a new campground</h1>
			<div style="width: 40%; margin: 25px auto">
				<form action="/campgrounds" method="POST">
					<div class="form-group">
						<label>Name</label>
						<input class="form-control" type="text" name="name" placeholder="Campsite Name">
					</div>
					<div class="form-group">
						<label>Image</label>
						<input class="form-control" type="text" name="image" placeholder="Image URL">
					</div>
					<div class="form-group">
						<label>Description</label>
						<textarea class="form-control" rows="5" placeholder="Add description" name="description"></textarea>
					</div>
					<div class="form-group" >
						<button class="btn btn-success btn-large">Submit</button>
						<a href="/campgrounds" class="btn btn-warning btn-large">Back</a> 
					</div>
				</form>
			</div>
		</div>
	</div>

<% include partials/footer %>