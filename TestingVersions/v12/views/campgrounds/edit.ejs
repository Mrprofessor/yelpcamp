<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<h1 style="text-align: center;">Edit campground <b><%=campground.name %></b></h1>
			<div style="width: 40%; margin: 25px auto">
				<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<label>Name</label>
						<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
					</div>
					<div class="form-group">
						<label>Image</label>
						<input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
					</div>
					<div class="form-group">
						<label>Price</label>
						<input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>"
						min="1" step="1">
					</div>
					<div class="form-group">
						<label>Description</label>
						<textarea class="form-control" rows="5"  name="campground[description]">
						    <%- campground.description %>
						</textarea>
					</div>
					<div class="form-group" >
						<button class="btn btn-success btn-large btn-block">Submit</button>
						<a href="/campgrounds" class="">Back</a> 
					</div>
				</form>
			</div>
		</div>
	</div>

<% include ../partials/footer %>