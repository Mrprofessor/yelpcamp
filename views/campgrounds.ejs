<% include partials/header %>
<div class="container">	
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp</h1>
			<p>View our handpicked campgrounds from all over the world.</p>
			<p>
				<a class="btn btn-primary" href="/campgrounds/new">Add new Campground</a>
			</p>
		</div>
	</header>

	<div class="row">
		<% campgrounds.forEach(function(camp){ %>
			<div class="col-md-3 col-sm-6">
				<h1><%= camp.name %></h1>
				<img src="<%= camp.image %>" alt="camp">
			</div>
		<% }) %>
	</div>
</div>
<% include partials/footer %>